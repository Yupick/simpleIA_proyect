# Archivo de ejemplo .env (no usar en producci√≥n directamente)
# Copiar a .env y ajustar valores seguros

# Seguridad
SECRET_KEY="cambia_este_valor_por_uno_seguro"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_MINUTES=30

# Modelo por defecto
DEFAULT_MODEL="gpt2"
NUM_TRAIN_EPOCHS=3
TRAIN_BATCH_SIZE=4

# CORS origen permitido para cliente web
CORS_ORIGINS="http://localhost:8001"

# Entorno y dispositivo
ENVIRONMENT="development"  # production habilita cookies Secure
DEVICE="cpu"  # cpu o cuda (si GPU disponible)

# Rate limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL="INFO"

# Proveedores externos (opcional)
# ANTHROPIC_API_KEY="sk-ant-..."
# OPENAI_API_KEY="sk-..."
